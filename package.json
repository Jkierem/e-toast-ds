{
  "name": "root",
  "private": false,
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ignore-prepublish --force-local",
    "clean": "lerna clean",
    "start": "lerna run start --stream --no-bail",
    "build": "lerna run build --stream",
    "build:css": "lerna run build --stream --scope @e-toast/css --no-bail",
    "build:react-css": "lerna run build --scope @e-toast/{css,react}",
    "serve:react": "lerna run serve --stream --scope @e-toast/react",
    "serve:stop-react": "lerna run serve:stop --stream --scope @e-toast/react",
    "start:css": "lerna run start --stream --scope @e-toast/css --no-bail",
    "start:react": "lerna run start --stream --scope @e-toast/react --no-bail",
    "start:css-docs": "lerna run start --stream --scope @e-toast/{css,css-doc-page} --no-bail",
    "start:css-doc-page": "lerna run start --stream --scope @e-toast/css-doc-page --no-bail",
    "start:react-sandbox": "lerna run start --stream --scope @e-toast/react --scope @e-toast/css --no-bail",
    "lerna": "lerna",
    "toasty": "lerna run start --stream --scope @e-toast/toasty",
    "test": "npm run build:react-css && npm run serve:react && npm run toasty && npm run serve:stop-react || npm run serve:stop-react"
  }
}
